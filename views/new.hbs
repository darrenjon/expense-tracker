<div class="container">
  <div class="row">
    <div class="d-flex justify-content-around">
      <form action="/records" method="POST">
        <div class="text-center align-self-center mb-4">
          <h3>新增支出</h3>
        </div>
        <div class="input-group mb-3" style="width: 500px;">
          <label class="input-group-text" for="name">名稱</label>
          <input type="text" class="form-control" placeholder="name" id="name" name="name"
            aria-label="name" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
          <label class="input-group-text" for="date">日期</label>
          <input type="date" class="form-control" placeholder="date" id="date" name="date"
            aria-label="date" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
          <label class="input-group-text" for="categoryId">類別</label>
          <select class="form-select" id="categoryId">
            <option selected>Select...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>

        <div class="input-group mb-3">
          <label class="input-group-text" for="number">金額</label>
          <input type="number" class="form-control" placeholder="amount" id="number" name="amount"
           aria-label="amount" aria-describedby="basic-addon1">
        </div>

        <div class="text-center align-self-center mt-4">
          <button class="btn btn-primary" type="submit">新增支出</button>
        </div>
      </form>
    </div>
  </div>
</div>