<div class="mt-3 mx-auto w-75">


<form action="/category" class="inline-block">
  <select onchange="form.submit()" class="form-select" name="category" id="category" aria-label=" category">
    <option value="">全部</option>
    {{#each categories}}
    <option value="{{this.name}}" {{this.selected}}>{{this.name}}</option>
    {{/each}}
  </select>
</form>
  

  <div class="m-3">
    <h3>總金額：{{totalAmount}}</h3>
  </div>

  <ul class="list-group">
    {{#each records}}
    <li class="list-group-item list-group-item-secondary">
      <div class="row">
        <div class="col-auto me-auto">
          <div class="d-flex align-items-center">
            <i class="{{ this.categoryId.icon }} fa-2x"></i>
            <div class="d-flex row">
              <span class="ms-3">{{this.name}}</span>
              <span class="ms-3">{{this.date}}</span>
            </div>
          </div>
        </div>
        <div class="col-auto">
          <span class="me-3">{{this.amount}} 元</span>
          <a class="btn btn-secondary" href="./records/{{ this._id }}/edit">修改</a>
          <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>

  <div class="text-center mt-5">
    <a class="btn btn-warning" href="./records/new">新增支出</a>
  </div>
</div>